<div class="profile-card">
  <h2>Mi Perfil</h2>
  <ul>
    <li><strong>Nombre:</strong> {{user.name}}</li>
    <li><strong>Email:</strong> {{user.email}}</li>
    <li><strong>Rol:</strong> {{user.role}}</li>
  </ul>
</div>


<h3>Historial de compras</h3>

{{#if tickets.length}}
  {{#each tickets}}
    <div class="ticket-card">
      <p><strong>Fecha:</strong> {{this.purchase_datetime}}</p>
      <p><strong>Código de compra:</strong> {{this.code}}</p>
      <p><strong>Total pagado:</strong> $ {{this.amount}}</p>

      <h4>Productos comprados:</h4>
      <ul>
        {{#each this.products}}
          <li>
            {{this.product.title}} — Cantidad: {{this.quantity}}
          </li>
        {{/each}}
      </ul>
      <hr>
    </div>
  {{/each}}
{{else}}
  <p>Aún no realizaste compras.</p>
{{/if}}

<div class="profile-actions">
  <a href="/" class="btn-secondary">Volver a productos</a>
  <a href="/api/sessions/logout" class="btn-logout">Cerrar sesión</a>
</div>
